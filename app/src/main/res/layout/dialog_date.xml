<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relative_time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time_picker_title_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:layout_below="@+id/ok_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TimePicker
        android:id="@+id/dialog_time_time_picker_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
    </TimePicker>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_time_time_picker_picker"
        android:layout_alignEnd="@id/dialog_time_time_picker_picker"
        android:layout_alignRight="@id/dialog_time_time_picker_picker"/>

</RelativeLayout>










